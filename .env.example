# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# BASE DE DATOS (Supabase PostgreSQL)
# ============================================
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:TU_PASSWORD@db.XXXXX.supabase.co:5432/postgres

# ============================================
# JWT (JSON Web Token)
# ============================================
# Secreto para firmar tokens - usar string largo y aleatorio
JWT_SECRET=tu_secreto_super_seguro_minimo_32_caracteres
JWT_EXPIRES_IN=24h

# ============================================
# CLOUDINARY (Almacenamiento de imágenes)
# ============================================
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# ============================================
# EMAIL (Nodemailer con Gmail)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password_de_gmail
ADMIN_EMAIL=email_donde_recibir_notificaciones@example.com

# ============================================
# CORS (Frontend URL)
# ============================================
FRONTEND_URL=http://localhost:5173
